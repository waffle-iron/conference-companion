<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="fr.xebia.conference.companion">

    <uses-permission android:name="android.permission.NFC"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:name=".core.KouignAmanApplication"
            android:theme="@style/AppTheme">

        <activity
                android:name=".ui.HomeActivity"
                android:launchMode="singleTop"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <!-- NFC  -->
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.ACTION_TAG_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.ACTION_TECH_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".ui.talk.TalkActivity"
                android:parentActivityName=".ui.HomeActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.HomeActivity"/>
        </activity>

        <activity
                android:name=".ui.schedule.ScheduleActivity"
                android:parentActivityName=".ui.HomeActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.HomeActivity"/>
        </activity>

        <activity
                android:name=".ui.speaker.SpeakerDetailsActivity"
                android:parentActivityName=".ui.HomeActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.HomeActivity"/>
        </activity>

        <activity android:name=".ui.note.MemoActivity"
                  android:parentActivityName=".ui.talk.TalkActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.TalkActivity"/>
        </activity>

        <activity
                android:name=".ui.conference.ConferenceChooserActivity"/>

        <service android:name=".service.SynchroIntentService"/>
        <service android:name=".service.FixPlanningIntentService"/>
        <service android:name=".service.ConferencesFetcherIntentService"/>
        <meta-data android:name="com.crashlytics.ApiKey" android:value="185c4c6c60101aba83215fcbd80cae097ede3e0b"/>
    </application>

</manifest>
