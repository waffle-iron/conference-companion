<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/XebiaActionBar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav</item>
        <item name="android:spinnerDropDownItemStyle">@style/DropDownItemStyle</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/default_list_selector_holo_light</item>
        <item name="android:activatedBackgroundIndicator">@drawable/default_activated_background_holo_light</item>
    </style>
    
    <style name="XebiaActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_xebia</item>
    </style>

    <style name="DropDownNav" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
        <item name="android:dropDownSelector">@drawable/selectable_background</item>
    </style>

    <style name="DropDownItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/DropDownNavTextStyle</item>
    </style>

    <style name="DropDownNavTextStyle" parent="@android:style/Widget">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
    </style>

    <style name="DropDownListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background</item>
    </style>

    <style name="talkRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingsbar</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>
</resources>

