<?xml version="1.0" encoding="utf-8"?>

<fr.xebia.xebicon.ui.widget.DrawShadowFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    app:shadowDrawable="@drawable/header_shadow"
    app:shadowTopOffset="?android:actionBarSize"
    android:id="@+id/container">


    <TextView
        android:id="@+id/empty_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

    <fr.xebia.xebicon.ui.widget.HeaderGridView
        android:id="@+id/speakers_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="true"
        android:clipToPadding="false"
        android:numColumns="2"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp" />

</fr.xebia.xebicon.ui.widget.DrawShadowFrameLayout>